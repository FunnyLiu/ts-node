{
  "$schema": "./tsconfig.schemastore-schema.json",
  "compilerOptions": {
    // core emit & checking options
    "target": "es2015",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",

    // emit options
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": true,

    // checking options
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importsNotUsedAsValues": "error",

    // types
    "lib": ["es2015", "dom"],
    "types": ["node", "mocha"]
  },
  "include": [
    "src/**/*"
  ]
}
